<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="A modern and Lighweight blog for Ghost">
    {{> head}}
    <style>
        :root {--ghost-accent-color: #FF4C60;}
        div.meta .comments{ display: none; }
    </style>
</head>
<body class="{{#if @site.cover_image}}cover{{/if}} {{body_class}}" {{#if @site.cover_image}}style="background: url({{@site.cover_image}}) no-repeat center center fixed;"{{/if}}>
    
	<!-- start: #wrapper -->
	<div id="wrapper">

        {{> header}}

        <main id="home" class="main grid-container">

            <!-- start: .content-wrapper -->
            <div class="content-wrapper content">      
                <div class="center left-content grid-70">
                    <!-- start: .articles -->
                    <div class="articles classic">
                                
                        {{#foreach posts visibility="all"}}
                            {{> loop/classic-article}}                 
                        {{/foreach}}
                        
                    </div>
                    <!-- end: .articles -->
                    
                    {{pagination}}

                </div>

                {{> sidebar}}     
                    
            </div>
            <!-- end: .content-wrapper -->
            
            {{> svg-waves}}
 
        </main>

    {{> footer}}        

    </div>
    <!-- end: #wrapper -->

    {{ghost_foot}}

    {{> svg-icons}}

    <!-- start: .mobile.main-nav -->
    <nav class="mobile main-nav hide-on-desktop-lg">
        {{navigation}}
    </nav>
    <!-- end: .mobile.main-nav -->
    <div class="menu-overlay hide-on-desktop-lg"></div>

    <script src="{{asset 'dist/scripts.min.js' }}"></script>

</body>
</html>
