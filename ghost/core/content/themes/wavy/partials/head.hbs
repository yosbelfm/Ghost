{{! Document Settings }}
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge" />

{{! Mobile Support }}
<meta name="HandheldFriendly" content="True" />
<meta name="MobileOptimized" content="320" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

{{! Styles'n'Scripts }}
<link rel="shortcut icon" href="{{asset 'favicon.ico' }}">

{{! Theme Styles }}

<style>{{> css/critical-css}}</style>
{{!-- <link href="{{asset 'dist/style.min.css' }}" type="text/css" rel="stylesheet"> --}}
<link href="{{asset 'dist/plugins.min.css' }}" type="text/css" rel="preload" as="style" onload="this.rel='stylesheet'">

{{> typography}}

{{!-- Custom Settings --}}
<style>
    :root{
        {{#match @custom.wave_color "!=" "#fc6668"}}
            .epcl-wave-color, .epcl-wave-color2{
                fill: {{@custom.wave_color}};
            }
        {{/match}}
        {{#if @custom.gradient_start_color}}
            --epcl-gradient-start-color: {{@custom.gradient_start_color}};
        {{/if}}
        {{#if @custom.gradient_end_color}}
            --epcl-gradient-end-color: {{@custom.gradient_end_color}};
        {{/if}}
        {{#if @custom.background_color}}
            --epcl-background-color: {{@custom.background_color}};
        {{/if}}
        {{#if @custom.boxes_background_color}}
            --epcl-boxes-background-color: {{@custom.boxes_background_color}};
        {{/if}}
        {{#if @custom.boxes_border_color}}
            --epcl-boxes-border-color: {{@custom.boxes_border_color}};
        {{/if}}
    }
    {{#if @custom.move_subscribe_button_to_left}}
        #ghost-portal-root iframe{
            right: auto;
            left: 0;
        }
    {{/if}}
</style>

<script>
	// Theme Config, check the documentation before edit this file
    var site_url = '{{@site.url}}';
	var theme_config = {
		masonry: 'on', // If you don't need masonry style, just set to "off"
        sticky_sidebar: 'on', // on / off
		disqus_shortname: 'ghostexample', // You can create your own Disqus Comments here: https://disqus.com/admin/create/
	};
    {{#if @custom.disqus_shortname}}
        theme_config.disqus_shortname = "{{@custom.disqus_shortname}}";
    {{/if}}   
</script>