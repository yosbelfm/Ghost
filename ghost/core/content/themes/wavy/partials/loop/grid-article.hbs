<article
    class="default grid-33 tablet-grid-50 mobile-grid-100 np-mobile ctag-{{primary_tag.slug}} post-access-{{visibility}} {{^if feature_image}}no-image{{/if}}">
    <header>
        <div class="post-format-image">
            <div class="featured-image">
                {{#if feature_image}}
                    <a href="{{url}}" class="thumb epcl-loader">
                        {{#if @first}}
                            {{!-- <span class="fullimage cover" style="background-image: url({{img_url feature_image size="loop_grid" }});"></span> --}}
                            <img class="fullimage cover" loading="eager" src="{{img_url feature_image size="loop_grid" }}" alt="{{t "Image of: {article_title}" article_title=title }}">
                        {{else}}
                            <img class="fullimage cover" loading="lazy" decoding="async" fetchpriority="low" src="{{img_url feature_image size="loop_grid" }}" alt="{{t "Image of: {article_title}" article_title=title }}">
                        {{/if}}
                        <span class="screen-reader-text">{{title}}</span>
                    </a>
                {{/if}}
                {{!-- Comments and Visibility Icons --}}
                {{> meta-data/comments-absolute }}
            </div>
            <div class="info">
                <h1 class="main-title title underline-effect"><a href="{{url}}">{{title}}</a></h1>
                <!-- start: .meta -->
                <div class="meta">
                    {{> meta-data/author }}
                    {{> meta-data/date }}
                    <div class="clear"></div>
                </div>
                <!-- end: .meta -->
            </div>
        </div>

    </header>
    
    <div class="post-excerpt">
        {{#if feature_image}}
            <p>{{excerpt characters="100"}}...</p>
        {{else}}
            <p>{{excerpt characters="200"}}...</p>
        {{/if}}
        <div class="clear"></div>
    </div>

    <footer class="bottom">
        <div class="meta bottom epcl-flex">
            <a href="{{url}}" class="continue-reading epcl-button gradient-button wave-button">{{t "Read More"}} <span class="screen-reader-text">{{title}}</span></a>
            {{> meta-data/reading-time}}
        </div>
    </footer>

    <div class="clear"></div>

</article>