{{!< default}}

{{#post}}

<!-- start: #page -->
<main id="page" class="main grid-container">
	
    <!-- start: .center -->
    <div id="single" class="content fullcover no-sidebar">

        {{#match @page.show_title_and_feature_image}}
            {{#if feature_image}}
                <div class="fullcover-wrapper">
                    <div class="post-format-image">
                        
                        <div class="featured-image">
                            <div class="epcl-loader">
                                <img width="1500" height="600" src="{{img_url feature_image size="fullcover"}}" class="fullwidth" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                            </div>                       
                        </div>

                        <div class="info grid-container grid-small">
                            <h1 class="main-title title ularge no-margin">{{title}}</h1>
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/match}}

        <div class="content">
        
            <!-- start: .left-content -->
            <div class="left-content grid-70 np-mobile">
                <article class="main-article {{post_class}}">
                
                    <section class="post-content">
                        {{^if feature_image }}
                            <h1 class="title ularge textcenter">{{title}}</h1>
                        {{/if}}
                        <div class="text">
                            {{content}}
                        </div>
                        <div class="clear"></div>
                    </section>
                    
                </article>
            </div>
            <!-- end: .content -->
            
            <div class="clear"></div>

        </div>
    
    </div>
    <!-- end: .center -->

    {{>svg-waves}}
    
</main>
<!-- end: #page -->

{{/post}}
