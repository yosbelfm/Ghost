<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    {{! Page Meta }}
    <title>{{t "Subscribe"}} - {{@site.title}}</title>

    {{> head}}

    {{ghost_head}}
</head>
<body class="epcl-fullscreen {{#if @site.cover_image}}cover{{/if}} {{body_class}}" {{#if @site.cover_image}}style="background: url({{@site.cover_image}}) no-repeat center center fixed;"{{/if}}>

    {{> svg-icons}}

    <main id="page-subscribe" class="epcl-flex epcl-fullheight">

        <header class="section underline-effect">
            <nav>
                <a href="{{@site.url}}" class="link-button">
                    <svg class="icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m5 12l6-6m-6 6l6 6m-6-6h14"/>
                    </svg>
                    {{t "Go back to home" }}
                </a>
            </nav>
        </header>

        <div class="epcl-subscribe epcl-flex">
            <div class="epcl-flex textcenter">
                <form class="subscribe-form grid-container grid-small" data-members-form="subscribe" data-members-autoredirect="false">
                    <h1 class="title ularge">{{{t "Subscribe to <span>{site_title}</span>" site_title=@site.title }}}</h1>
                    <p>{{{t "Create an <b>account</b> for full access:"}}}</p> 
                    <div class="form-group">
                        <input type="email" name="email" class="inputbox large" required placeholder="{{t "Enter your email address"}}" data-members-email>
                        <button class="epcl-button submit absolute wave-button" type="submit">{{t "Get Started"}}<span class="loader"></span></button>
                    </div>                  
                    <div class="message">
                        <p class="error-detail" data-members-error></p>
                        <p class="success-message">{{t "Login link was sent successfully, check your email"}} <i class="fa fa-envelope-o"></i></p>
                    </div>
                    <br>
                    <p class="underline-effect np-bottom">{{t "Already have an account?"}} <a href="{{@site.url}}/signin" class="fw-bold">{{t "Sign In"}}</a></p>             
                </form>
        
            </div>
        </div>

        {{> footer-fullscreen}}

        {{> svg-waves}}

    </main>

    {{ghost_foot}}

    <script type="text/javascript" src="{{asset 'dist/scripts.min.js' }}" defer></script>
    
</body>
</html>