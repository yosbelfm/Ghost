<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>
    {{! Page Meta }}
    <title>{{t "Page not Found"}} - {{@site.title}}</title>

    {{> head}}

    {{ghost_head}}
</head>
<body class="page-404 epcl-fullscreen {{#if @site.cover_image}}cover{{/if}} {{body_class}}" {{#if @site.cover_image}}style="background: url({{@site.cover_image}}) no-repeat center center fixed;"{{/if}}>

    {{> svg-icons}}

    <!-- start: #page-404 -->
    <main id="page-404" class="main epcl-flex epcl-fullheight">

        <!-- start: .center -->
        <div class="grid-container flex-align-middle">
           
            <div class="not-found grid-55">
                <h1 class="title ularge"><span>404</span><br>{{t "Page not found" }}</h1>
                <p>{{{t "Unfortunately the page you are looking for <strong>is not available.</strong>"}}}</p>
                <div class="buttons">
                    <a href="{{@site.url}}" class="epcl-button red-gradient wave-button">{{t "Go back to home" }}</a>
                </div>
            </div>   

            {{#get "posts" limit="3" include="tags" as |recent-articles| }}
                {{#if recent-articles}}
                    <aside class="grid-40 prefix-5 hide-on-mobile hide-on-tablet">
                        <div class="widget widget_epcl_posts_thumbs">
                            <h2 class="title widget-title small fw-normal">{{{t "Or check one of <strong>our latest articles...</strong>"}}}</h2>
                            {{#foreach recent-articles visibility="all"}}
                                {{> widgets/loop-article }}
                            {{/foreach}}        
                        </div>                 
                    </aside>          
                {{/if}}
            {{/get}}

            <div class="clear"></div>

        </div>
        <!-- end: .center -->

        {{> footer-fullscreen}}

        {{> svg-waves}}

    </main>
    <!-- end: #page-404 -->

    {{ghost_foot}}

    <script type="text/javascript" src="{{asset 'dist/scripts.min.js' }}" defer></script>

</body>
</html>


